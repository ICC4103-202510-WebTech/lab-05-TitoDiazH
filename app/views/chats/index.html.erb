<h1 class="text-center">My Inbox</h1>

<div class="table-responsive">
    <table class="table table-success table-striped">
        <thead class="thead-dark text-center">
            <tr>
                <th>user</th>   
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="text-center">
            <% @chat.each do |chat| %>
                <tr>
                <td><%= chat.other_user(current_user)%></td>
                <td>
                    <%= link_to 'View', chat_path(chat), class: 'btn btn-success btn-sm' %>
                    <% if can? :edit, chat %>
                        <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-secondary btn-sm' %>
                        <%= link_to 'Delete', chat_path(chat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this chat?'}, class: 'btn btn-danger btn-sm' %>
                    <% end %>
                </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="text-center mb-3">
        <%= link_to 'New', new_chat_path, class: 'btn btn-success' %>
    </div>
</div>

  