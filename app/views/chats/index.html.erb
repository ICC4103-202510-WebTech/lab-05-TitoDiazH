<h1 class="text-center">Chats</h1>

<div class="table-responsive">
    <table class="table table-success table-striped">
        <thead class="thead-dark text-center">
            <tr>
                <th>Sender</th>
                <th>receiver</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="text-center">
            <% @chats.each do |chat| %>
                <tr>
                <td><%= chat.sender.full_name%></td>
                <td><%= chat.receiver.full_name%></td>
                <td>
                    <%= link_to 'View', chat_path(chat), class: 'btn btn-success btn-sm' %>
                    <% if can? :edit, chat %>
                        <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-secondary btn-sm' %>
                    <% end %>
                </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="text-center mb-3">
        <%= link_to 'New', new_chat_path, class: 'btn btn-success' %>
    </div>
</div>

  